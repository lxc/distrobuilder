image:
  distribution: archlinux
  release: 2018.03.01
  description: Arch Linux
  expiry: 30d
  architecture: x86_64

source:
  downloader: archlinux-http
  url: https://archive.archlinux.org/iso
  keys:
    - 4AA4767BBC9C4B1D18AE28B77F2D434B9741E8AC

targets:
  lxc:
    create-message: |
      You just created an Arch Linux container (release={{ image.release }}, arch={{ image.architecture }})

    config:
      - type: all
        before: 5
        content: |-
          lxc.include = LXC_TEMPLATE_CONFIG/archlinux.common.conf

      - type: user
        before: 5
        content: |-
          lxc.include = LXC_TEMPLATE_CONFIG/archlinux.userns.conf

      - type: all
        after: 4
        content: |-
          lxc.include = LXC_TEMPLATE_CONFIG/common.conf

      - type: user
        after: 4
        content: |-
          lxc.include = LXC_TEMPLATE_CONFIG/userns.conf

      - type: all
        content: |-
          lxc.arch = {{ image.architecture_kernel }}

files:
  - name: hostname
    path: /etc/hostname
    generator: hostname

  - name: hosts
    path: /etc/hosts
    generator: hosts

packages:
  manager: pacman

  update: true
  cleanup: true

  sets:
    - packages:
        - systemd-sysvcompat
        - neovim
      action: install
